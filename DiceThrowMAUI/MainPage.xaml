<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceThrowMAUI.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!--Title-->
        <Label Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Text="Dice Throwing Game"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <Border Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                x:Name="PlayerFrame">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Text="{Binding MainPlayer.Name, Mode=OneWay}"
                       TextColor="White"
                       FontSize="16"
                       HorizontalOptions="Start" />

                <Label Grid.Row="1"
                       x:Name="PlayerDamageLabelText"
                       TextColor="White"
                       FontSize="16"
                       HorizontalTextAlignment="Start" />

                <Button Grid.Row="2"
                        Text="Roll the dice"
                        x:Name="PlayerThrowBtn"
                        Clicked="PlayerThrow_Clicked"
                        MaximumWidthRequest="150"
                        MaximumHeightRequest="50"
                        HorizontalOptions="Start" />
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                x:Name="EnemyFrame">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Text="{Binding Rat.Name, Mode=OneWay}"
                       TextColor="White"
                       FontSize="16"
                       HorizontalOptions="Start" />

                <Label Grid.Row="1"
                       x:Name="EnemyDamageLabelText"
                       TextColor="White"
                       FontSize="16"
                       IsVisible="False"
                       HorizontalOptions="Start" />

                <Button Grid.Row="2"
                        Text="Roll the dice"
                        x:Name="EnemyThrowBtn"
                        MaximumWidthRequest="150"
                        MaximumHeightRequest="50"
                        HorizontalOptions="Start"
                        IsVisible="False" />

            </Grid>
        </Border>

        <Button Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2" 
                Text="Clear Combat Text"
                x:Name="ClearCombatTextBtn"
                Clicked="ClearCombatTextBtn_Clicked"
                WidthRequest="150"
                HeightRequest="40"
                Margin="0, 10, 0, 0" />

        <ScrollView Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="10">
            <Label x:Name="CombatTextLabel"
                   TextColor="White" />
        </ScrollView>
    </Grid>

</ContentPage>
